module test_full_adder;
  
  logic a, b, cin;
  logic sum, cout;
  integer i;
  
  full_adder uut(.a(a), .b(b), .cin(cin), .sum(sum), .cout(cout));
  
  initial begin
    $dumpfile("dump.vcd");
    $dumpvars(1);
    
    for (i=0; i<8;i=i+1) begin
      {a,b,cin} = i;
      #1;
    end
	$finish;
  end
endmodule
